@model List<Semaninha.Models.Album>

@{
    ViewBag.Title = "Top Tracks do Usuário";
    Layout = "_Layout";
}

<h1>Top albuns do Usuário</h1>

<form asp-controller="User" asp-action="GetTopAlbums" method="post">
    <div class="mb-3">
        <label for="nomeUsuario" class="form-label">Nome do Usuário:</label>
        <input type="text" id="nomeUsuario" name="nomeUsuario" required class="form-control" />
        <div class="mb-3">
            <label for="period">Período:</label>
            <select id="period" name="period" class="form-control">
                <option value="7day">Últimos 7 dias</option>
                <option value="1month">Último mês</option>
                <option value="3month">Últimos 3 meses</option>
                <option value="6month">Últimos 6 meses</option>
                <option value="12month">Últimos 12 meses</option>
                <option value="overall">Todo histórico</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>

@if (Model != null && Model.Any())
{
    <ul class="list-group mt-3">
        @foreach (var album in Model)
        {
            <li class="list-group-item">
                <strong>@album.Name</strong> - @album.Artist?.Name
                <br />
                Playcount: @album.Playcount
                <br />
                <a href="@album.Url" target="_blank">Link no LastFM</a>
            </li>
        }
    </ul>
}
else if(Model != null)
{
    <p class="mt-3">Nenhuma faixa encontrada para este usuário.</p>
}